package fr.dawan.condition;

public class OperateurTernaire {

	public static void main(String[] args) {
		int nbre = 10;
		String str = "";
		
		/*
		 * Instruction If-Else
		 */
		if(nbre > 0) {
			str = "Positif";
		} else {
			str= "Négatif";
		}
		
		/*
		 * Opérateur Ternaire 
		 * Syntaxe ==> Condition ? Instruction1 : Instruction2
		 */
		str = nbre > 0 ? "Positif" : "Négatif";
	}

}
